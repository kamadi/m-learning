<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ActionTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:drawablePadding">@dimen/margin_standard</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:clickable">true</item>
        <item name="android:drawableEnd">@drawable/ic_next_grey</item>
        <item name="android:focusable">true</item>
        <item name="android:fontFamily">@font/gotha_medium</item>
        <item name="android:padding">@dimen/margin_large_small</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:textSize">@dimen/text_10</item>
    </style>

    <style name="BigButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:fontFamily">@font/gotha_bold</item>
        <item name="android:foreground">@drawable/ripple_round_15dp</item>
        <item name="android:textSize">@dimen/text_12</item>
    </style>

    <style name="BlueButton" parent="BigButton">
        <item name="android:background">@drawable/background_blue_round_15dp</item>
        <item name="android:elevation">@dimen/button_elevation</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginLeft">@dimen/margin_large_extra</item>
        <item name="android:layout_marginRight">@dimen/margin_large_extra</item>
    </style>

    <style name="QuestionButton">
        <item name="android:background">@drawable/border_grey_round_15dp</item>
        <item name="android:textColor">@color/black_light</item>
        <item name="android:fontFamily">@font/gotha</item>
        <item name="android:elevation">0dp</item>
        <item name="android:textSize">@dimen/text_10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:paddingTop">@dimen/margin_small_extra</item>
        <item name="android:paddingBottom">@dimen/margin_small_extra</item>
        <item name="android:background">@drawable/selector_questionarie_button</item>
        <item name="android:textColor">@drawable/selector_questionarie_button_text_color</item>
    </style>

    <style name="CardLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">@dimen/margin_large</item>
        <item name="android:layout_marginEnd">@dimen/margin_large</item>
        <item name="android:background">@drawable/background_white_round_15dp</item>
        <item name="android:padding">@dimen/margin_large_small</item>
        <item name="android:elevation">@dimen/button_elevation</item>
    </style>

    <style name="InputTitleTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textSize">@dimen/text_8</item>
        <item name="android:fontFamily">@font/gotha_medium</item>
    </style>
</resources>
